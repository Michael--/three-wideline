{
	"version": "2.0.0",
	"tasks": [
      {
         "label": "sample",
         "type": "npm",
         "script": "start",
			"isBackground": true,
         "problemMatcher": [
            {
               "owner": "custom", // this is a workaround to stop the task upon success, see https://github.com/Microsoft/vscode/issues/6209
               "pattern": {
                  "regexp": "____________"
               },
               "background": {
                  "activeOnStart": true,
                  "beginsPattern": "Compiled",
                  "endsPattern": "(successfully|with|failed)"
               }
            },
            "$tsc"
         ]

      },
	]
}